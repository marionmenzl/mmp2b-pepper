<% content_for :title, "Tracker" %>
<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.firstName %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Profile', edit_user_registration_path %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_registration_path %></td>
    <td><%= link_to 'Delete', user, method: :delete,
                                     data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br>

