<p id="notice"><%= notice %></p>

<h1>Peppers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @peppers.each do |pepper| %>
      <tr>
        <td><%= pepper.name %></td>
        <td><%= pepper.user_id %></td>
        <td><%= link_to 'Show', pepper %></td>
        <td><%= link_to 'Edit', edit_pepper_path(pepper) %></td>
        <td><%= link_to 'Destroy', pepper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pepper', new_pepper_path %>
